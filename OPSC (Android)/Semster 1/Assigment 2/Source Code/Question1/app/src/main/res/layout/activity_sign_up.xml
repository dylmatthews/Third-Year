<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a15009851.dylanmatthews.question1.activitySignUp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="66dp"
        android:id="@+id/etSignUpName"
        android:hint="@string/hintName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/etSignUpName"
        android:layout_alignEnd="@+id/etSignUpName"
        android:layout_marginTop="41dp"
        android:id="@+id/etSignUpPassword"
        android:hint="@string/hintPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/etSignUpPassword"
        android:layout_alignEnd="@+id/etSignUpPassword"
        android:layout_marginTop="41dp"
        android:hint="@string/hintComfirmPasword"
        android:id="@+id/etConfirmPassword" />

    <Button
        android:text="@string/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etConfirmPassword"
        android:layout_alignStart="@+id/etConfirmPassword"
        android:layout_marginTop="50dp"
        android:id="@+id/btnLogin"
        android:onClick="onClickSignUp" />

</RelativeLayout>
