<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a15009851.dylanmatthews.lockstockbarrel.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"

        android:layout_alignParentStart="true"
        android:id="@+id/etName"
        android:hint="Enter Customers Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/etNumber"
        android:layout_alignParentStart="true"
        android:id="@+id/etRepair"
        android:hint="Repair" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/etRepair"
        android:layout_alignParentStart="true"
        android:id="@+id/etRepairExtra"
        android:hint="Repair Other" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/etRepairExtra"
        android:layout_alignParentStart="true"
        android:id="@+id/etNumItems"
        android:hint="Number Of Itmes" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/etNumItems"
        android:layout_alignParentStart="true"
        android:id="@+id/etCost"
        android:hint="Cost" />

    <Button
        android:text="Insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCost"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:id="@+id/btnInsert"
        android:onClick="addRepair" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etNumber"
        android:hint="Cellphone Number"
        android:layout_below="@+id/etName"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnInsert"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="79dp"
        android:id="@+id/btnSearch"
        android:onClick="onSearch" />

</RelativeLayout>
