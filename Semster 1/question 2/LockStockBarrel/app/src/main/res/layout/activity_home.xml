<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a15009851.dylanmatthews.lockstockbarrel.home">

    <Button
        android:text="Search Repairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSearch"
        android:onClick="onSearch"
        android:layout_above="@+id/btnRepairFetched"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="108dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Add Repair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:id="@+id/btnInsert"
        android:layout_alignParentEnd="true"
        android:onClick="onInsert" />

    <Button
        android:text="Repair Fetched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRepairFetched"
        android:onClick="onRepairFetched"
        android:layout_marginBottom="133dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Search Fetched Repairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:id="@+id/btnSearchFetched"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="onSearchFetched" />

    <Button
        android:text="Update A Repair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/btnUpdateRe"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="onUpdatebtn" />

</RelativeLayout>
